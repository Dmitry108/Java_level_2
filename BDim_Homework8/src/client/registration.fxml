<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.RegController"
      prefHeight="200" prefWidth="300" alignment="CENTER">
    <Label text="Имя пользователя (ник)"/>
    <TextField fx:id="nickField" onAction="#nickFieldPress"/>
    <Label text="Логин"/>
    <TextField fx:id="loginField" onAction="#loginFieldPress"/>
    <Label text="Пароль"/>
    <PasswordField fx:id="passwordField" onAction="#tryReg"/>
    <Button text="Зарегистрироваться" onAction="#tryReg" />
    <padding>
        <Insets bottom="8" left="8" right="8" top="8" />
    </padding>
</VBox>